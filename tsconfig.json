{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,  // ← MUDE de true para false
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false  // ← ADICIONE essa linha
  },
  "include": ["src"]
}